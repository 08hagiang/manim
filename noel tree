     text1a=MathTex("1.75(x+0.23)+4").move_to(3*RIGHT+2*UP)
        text1b=MathTex("\{-2<x<-0.1\}").next_to(text1a, DOWN, buff=0.1)
        self.play(Write(text1a), Write(text1b))
        hs1=ax.get_graph(lambda x:1.75*(x+0.23)+4,x_range=[-2,-0.1])
        self.play(Create(hs1))
        self.play(FadeOut(text1a), FadeOut(text1b))
